{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "DevOpsBootCamp",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 3890,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "sequential_start": true,
  "extra_config":{
    "telemetry/opencensus": {
      "sample_rate": 100,
      "reporting_period": 0,
      "exporters": {
        "jaeger": {
          "endpoint": "http://jaeger:14268/api/traces",
          "service_name":"krakend",
          "buffer_max_count": 1000
        }
      }
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/github-proxy",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/github",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.github.com"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/v1/github/{user}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/{user}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.github.com"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/v1/issues-from-repo/{user}/{reponame}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/repos/{user}/{reponame}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.github.com"
          ],
          "disable_host_sanitize": false
        }
      ],
      "input_query_strings": [
        "state"
      ]
    },
    {
      "endpoint": "/v1/limited-requests",
      "input_headers": [
        "Authorization"
      ],
      "extra_config": {
        "qos/ratelimit/router": {
          "@comment": "Client rate limit of 10 reqs/day",
          "client_max_rate": 5,
          "every": "5m",
          "strategy": "ip"
        }
      },
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/github",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://api.github.com"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/v1/tracing",
      "method": "GET",
 
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/bin/1ad0702c-64f5-49ca-a12d-009659897249",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "https://mockbin.org"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/v1/devjobs",
      "input_headers": [
        "Authorization"
      ],
      "backend": [
        {
              "url_pattern": "/repos/frontendbr/vagas/issues",
              "is_collection": true,
              "mapping": {
                  "collection": "frontends"
              },
              "host": [
                  "https://api.github.com"
              ]
          },
          {
              "url_pattern": "/repos/backend-br/vagas/issues",
              "is_collection": true,
              "mapping": {
                  "collection": "backends"
              },	
              "host": [
                  "https://api.github.com"
              ]
          }

      ]
  }


  ]
}